@using JobApplications.Data.Models
@model List<Job>


@if (Model.Count > 0)
{
    <div>
        @foreach (var item in Model)
        {
            <p class="bg-info">@item.Company - @item.Title - for salary: @item.Salary</p>
            <a asp-controller="Job" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Delete</a>
            <a asp-controller="Job" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
        }
    </div>
}