@using JobApplications.DTOs
@model CompanyFormDTO

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="CompanyName"></label>
                <input asp-for="CompanyName" class="form-control" placeholder="Software Developer,DevOps etc...">
                <span asp-validation-for="CompanyName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumbersOfEmployes"></label>
                <input asp-for="NumbersOfEmployes" class="form-control" placeholder="12000,8000, etc...">
                <span asp-validation-for="NumbersOfEmployes" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfCreation"></label>
                <textarea asp-for="DateOfCreation" rows="1" class="form-control" placeholder="Amazon,Google,Microsoft, etc..."></textarea>
                <span asp-validation-for="DateOfCreation" class="small text-danger"></span>
            </div>
            <input type="hidden" asp-for="IdentityUserId" />
            @* This fixes the identity user null("The lost of data") *@
            

            <div class="form-group">
                <label asp-for="IndustryId"></label>
                <select asp-for="IndustryId" class="form-control">
                    @foreach (var indr in Model.Industries)
                    {
                        <option value="@indr.Id">@indr.Name</option>
                    }
                </select>
                <span asp-validation-for="IndustryId" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>
