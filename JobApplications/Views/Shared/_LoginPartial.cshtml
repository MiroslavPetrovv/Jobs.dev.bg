@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    /* Style for Register button */
    .navbar-nav .dropdown-toggle {
        color: #343a40; /* Dark text color to match Login */
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .navbar-nav .dropdown-toggle:hover {
            background-color: #007bff; /* Blue background on hover */
            color: white; /* White text on hover */
        }

    /* Dropdown menu links */
    .dropdown-menu a {
        color: #343a40;
    }

        .dropdown-menu a:hover {
            background-color: #007bff;
            color: white;
        }
</style>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <div class="navbar-nav ml-auto">
            <!-- Login Button -->
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>

        <!-- Register Dropdown -->
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="registerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Register
            </a>
            <ul class="dropdown-menu" aria-labelledby="registerDropdown">
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">User</a></li>
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/RegisterCompany">Company</a></li>
            </ul>
        </li>
        </div>
    }
</ul>
