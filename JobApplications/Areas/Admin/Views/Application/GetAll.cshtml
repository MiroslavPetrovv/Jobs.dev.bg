@model IEnumerable<JobApplications.DTOs.ApplicationDisplayingFormDto>

@{
    ViewData["Title"] = "All Applications";
}

<div class="container mt-5">
    <h1 class="text-center">All Job Applications</h1>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Application ID</th>
                <th scope="col">Job Title</th>
                <th scope="col">Applicant Name</th>
                <th scope="col">Applied Date</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var application in Model)
                {
                    <tr>
                        <td>@application.Id</td>
                        <td>@application.JobTitle</td>
                        <td>@application.UserName</td>
                        <td>@application.ApplyedDate.ToString("dd/MM/yyyy")</td>
                        <td>@application.StatusName</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No applications found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Optional: Add some custom styles -->
<style>
    .table {
        margin-top: 20px;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }
</style>