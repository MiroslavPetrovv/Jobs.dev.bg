@using JobApplications.DTOs
@using JobApplications.Extensions
@model List<JobFormDto>

@{
    // job ->
    var userid = User.GetId();

}
@if (Model.Count > 0)
{
    <div>
        @foreach (var item in Model)
        {
                <p class="bg-info"> @item.Title - for salary: @item.Salary</p>
                <a asp-area="Company" asp-controller="Job" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Delete</a>
                <a asp-area="Company" asp-controller="Job" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                <a asp-area="Company" asp-controller="Application" asp-action="GetAllApplicationsForAJob" asp-route-id="@item.Id"  class="btn btn-info">See All Applicants</a>

        }
    </div>
}




